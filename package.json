{
  "name": "gp-imap-rest-api",
  "version": "1.3.1",
  "author": {
    "name": "Gerold Penz",
    "email": "gerold@gp-softwaretechnik.at",
    "url": "https://gp-softwaretechnik.at/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gerold-penz/gp-imap-rest-api.git"
  },
  "dependencies": {
    "@picocss/pico": "^2.0.6",
    "@sveltejs/kit": "^2.8.1",
    "@sveltejs/vite-plugin-svelte": "^4.0.1",
    "http-status-codes": "^2.3.0",
    "imapflow": "1.0.164",
    "postal-mime": "^2.3.2",
    "svelte": "^5.2.4",
    "svelte-check": "^4.0.9",
    "zod": "^3.23.8",
    "zod-form-data": "^2.0.2"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/bun": "latest",
    "@types/imapflow": "^1.0.19",
    "@types/mailparser": "^3.4.5",
    "@types/node-imap": "^0.9.3",
    "sass": "^1.81.0",
    "svelte-adapter-bun": "^0.5.2",
    "vite": "^5.4.11"
  },
  "bugs": {
    "url": "https://github.com/gerold-penz/gp-imap-rest-api/issues"
  },
  "description": "IMAP REST API with Bun und SvelteKit",
  "keywords": [
    "Bun",
    "Bun.js",
    "TypeScript",
    "Imap",
    "Rest",
    "Api",
    "Server",
    "Docker",
    "SvelteKit",
    "ImapFlow",
    "postal-mime"
  ],
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "bun --bun ./index.js",
    "dev": "bun --bun vite dev --host=0.0.0.0 --port=8080 --strictPort",
    "incr_version": "npm version patch --no-git-tag-version",
    "build:vite": "bun --bun run vite build",
    "build": "bun run build:vite",
    "preview": "bun --bun vite preview --host=0.0.0.0 --port=8080 --strictPort",
    "deploy:github": "short_version=$(echo $npm_package_version | cut -d. -f1,2) && docker buildx build --no-cache --pull --platform linux/amd64,linux/arm64 -t ghcr.io/gerold-penz/gp-imap-rest-api:$short_version -t ghcr.io/gerold-penz/gp-imap-rest-api:$npm_package_version -t ghcr.io/gerold-penz/gp-imap-rest-api:latest --push ."
  },
  "type": "module"
}
